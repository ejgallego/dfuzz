theory RealPosInf

  use import real.RealInfix
  use import real.FromInt
  use import real.Abs

  type t = Finite real | Infinite

  function add (x: t) (y: t) : t =
    match x with
      | Infinite -> Infinite
      | Finite x ->
        match y with
          | Infinite -> Infinite
          | Finite y -> Finite (x +. y)
        end
    end

  function mul (x: t) (y: t) : t =
    match x with
      | Infinite -> Infinite
      | Finite x ->
        match y with
          | Infinite -> Infinite
          | Finite y -> Finite (x *. y)
        end
    end

  function fromT (x : t) : t =
     match x with
       | Infinite -> Infinite
       | Finite x -> Finite (abs x)
     end

  function fromReal (x : real) : t =
    Finite (abs x)

  function fromInt (x : int) : t =
    Finite (abs (from_int x))

  (* predicate lt (x y: t) = *)
