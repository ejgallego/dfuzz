  (*     | Infinite -> false *)
  (*     | Finite x -> *)
  (*       match y with *)
  (*         | Infinite -> true *)
  (*         | Finite y -> x <. y *)
  (*       end *)
  (*   end *)

  (* predicate le (x y: t) = lt x y \/ x = y *)

  predicate le (x y: t) =
    match x with
      | Infinite ->
        match y with
          | Infinite -> true
          | Finite _ -> false
        end
      | Finite x ->
        match y with
          | Infinite -> true
          | Finite y -> x <=. y
        end
    end

  predicate eq (x y: t) =
    match x with
      | Infinite ->
        match y with
          | Infinite -> true
          | Finite _ -> false
        end
      | Finite x ->
        match y with
          | Infinite -> false
          | Finite y -> x = y
        end
    end

  clone export relations.TotalOrder with type t = t, predicate rel = le,
    lemma Refl, lemma Antisymm, lemma Trans, lemma Total

